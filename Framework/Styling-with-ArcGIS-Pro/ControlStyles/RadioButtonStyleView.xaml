        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <extensions:DesignOnlyResourceDictionary Source="pack://application:,,,/ArcGIS.Desktop.Framework;component\Themes\Default.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0">
            <TextBlock Margin="5,10,0,0" >Available Styles</TextBlock>
            <ComboBox x:Name="StylesComboBox" Grid.Row="0" Margin="5,5,5,0" MinWidth="220" ItemsSource="{Binding ListOfRadioBtns, Mode=OneWay}" 
                          SelectedItem="{Binding SelectedRadioBtn, Mode=TwoWay}"></ComboBox>
            <Separator Margin="0,10,0,0"/>
            <TextBlock Text="Sample" Margin="5,10,0,0"  VerticalAlignment="Center" HorizontalAlignment="Left" />
      <StackPanel Orientation="Horizontal" Margin="0,50,0,0" Background="{DynamicResource Esri_ControlBackgroundBrush}" HorizontalAlignment="Center">
        <RadioButton Content="RadioButton"  Margin="5,10,5,5" IsChecked="True" IsEnabled="True" FontSize="12" FontWeight="Regular" Foreground="{DynamicResource Esri_TextControlBrush}"></RadioButton>
        <RadioButton Content="RadioButton" Margin="5,10,10,5" IsChecked="True" IsEnabled="False" FontSize="12" FontWeight="Regular" Foreground="{DynamicResource Esri_TextControlBrush}"></RadioButton>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
